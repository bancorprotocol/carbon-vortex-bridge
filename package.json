{
  "name": "@bancor/carbon-vortex-bridge",
  "version": "1.0.0",
  "description": "The Carbon Vortex Bridge contracts",
  "main": "index.js",
  "author": "Bancor Team",
  "scripts": {
    "build": "hardhat compile",
    "cleanbuild": "pnpm clean && pnpm build",
    "test": "forge test",
    "test:deploy": "TEST_FORK=1 ./deployments/run-fork.sh HARDHAT_NETWORK=tenderly mocha --require hardhat/register --extension ts --recursive --exit --timeout 600000 --bail --no-exit 'deploy/tests/${TENDERLY_NETWORK_NAME}/**/*.ts'",
    "coverage": "forge coverage",
    "coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "gas-report": "forge test --gas-report",
    "codesize": "forge build --sizes",
    "export:storage": "pnpm cleanbuild && hardhat run deployments/storage-layout.ts",
    "deploy:prepare": "rm -rf ./node_modules && rm pnpm-lock.yaml && pnpm install && pnpm cleanbuild",
    "deploy:network": "./deployments/run-network.sh hardhat deploy",
    "verify:mainnet": "HARDHAT_NETWORK=mainnet hardhat etherscan-verify --license None --force-license --api-url https://api.etherscan.io --solc-input",
    "verify:base": "HARDHAT_NETWORK=base hardhat etherscan-verify --license None --force-license --api-url https://api.basescan.org --solc-input",
    "verify:arbitrum": "HARDHAT_NETWORK=arbitrum hardhat etherscan-verify --license None --force-license --api-url https://api.arbiscan.io --solc-input",
    "verify:sepolia": "HARDHAT_NETWORK=sepolia hardhat etherscan-verify --license None --force-license --api-url https://api-sepolia.etherscan.io --solc-input",
    "setup:fork": "./deployments/run-fork.sh pnpm run:tenderly deployments/setup-fork.ts",
    "setup:testnet": "./deployments/run-testnet.sh pnpm run:tenderly deployments/setup-testnet.ts",
    "run:tenderly": "HARDHAT_NETWORK=tenderly hardhat run",
    "lint": "pnpm lint:sol && pnpm lint:ts",
    "lint:sol": "solhint --max-warnings 0 contracts/**/*.sol test/**/*.sol",
    "lint:ts": "pnpm eslint components deploy utils",
    "format": "prettier --check --write test/**/*.sol contracts/**/*.sol components/**/*.ts deploy/**/*.ts utils/**/*.ts --config .prettierrc",
    "clean": "rm -rf artifacts cache coverage typechain-types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bancorprotocol/carbon-vortex-bridge.git"
  },
  "keywords": [],
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/bancorprotocol/carbon-vortex-bridge/issues"
  },
  "homepage": "https://github.com/bancorprotocol/carbon-vortex-bridge#readme",
  "dependencies": {
    "hardhat": "2.22.18"
  },
  "devDependencies": {
    "@across-protocol/contracts": "3.0.25",
    "@anders-t/ethers-ledger": "^1.0.4",
    "@balancer-labs/v2-interfaces": "^0.4.0",
    "@balancer-labs/v2-vault": "^3.0.1",
    "@bancor/token-governance": "^0.1.8",
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@layerzerolabs/lz-evm-oapp-v2": "3.0.49",
    "@layerzerolabs/lz-evm-protocol-v2": "3.0.49",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@openzeppelin/contracts": "5.1.0",
    "@openzeppelin/contracts-upgradeable": "5.1.0",
    "@tenderly/hardhat-tenderly": "1.8.0",
    "@typechain/ethers-v5": "^11.0.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/adm-zip": "^0.5.0",
    "@types/chai": "^4.3.5",
    "@types/lodash": "^4.14.200",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "chai": "^4.3.7",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethers": "^5.4.7",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "0.11.34",
    "hardhat-deploy-tenderly": "^0.2.0",
    "hardhat-ignore-warnings": "^0.2.11",
    "hardhat-storage-layout": "^0.1.7",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^5.1.3"
  },
  "resolutions": {
    "@tenderly/hardhat-tenderly>@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13"
  }
}
